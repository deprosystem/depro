<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/pad_120">

    <com.dpcsa.compon.custom_components.ComponImageView
        android:id="@+id/main_image_path"
        android:layout_width="@dimen/pad_120"
        android:layout_height="@dimen/pad_120"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pad_10"
        android:layout_marginTop="@dimen/pad_18"
        android:layout_marginRight="@dimen/pad_25"
        android:layout_toRightOf="@+id/main_image_path"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="3sp"
        android:textColor="#000617"
        android:textSize="15sp" />

    <com.dpcsa.compon.custom_components.ComponTextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/black_50"
        android:layout_below="@id/title"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/pad_10"
        android:layout_marginRight="@dimen/pad_14"
        app:dateFormat="dd.MM.yyyy"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/pad_1"
        android:background="@color/gray_b"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>